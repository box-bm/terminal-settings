export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="gnzh"

zstyle ':omz:update' mode auto

plugins=(
  git
  zsh-autosuggestions
  zsh-syntax-highlighting
)

source $ZSH/oh-my-zsh.sh

# Load modular config
source ~/.config/dotfiles/zsh/env.zsh
source ~/.config/dotfiles/zsh/paths.zsh
source ~/.config/dotfiles/zsh/aliases.zsh

# enable fastfetch (only run on first shell, not in nested shells or new tabs)
if [[ -o interactive ]] && [[ $SHLVL -eq 1 ]] && command -v fastfetch >/dev/null 2>&1; then
  fastfetch
fi
